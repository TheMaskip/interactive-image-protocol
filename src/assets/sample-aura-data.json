{
  "version": "1.0",
  "metadata": {
    "author": "aezi zhu (github.com/aezizhu)",
    "description": "A sample interactive map demonstrating the Aura Image Protocol.",
    "createdAt": "2025-08-17T10:00:00Z"
  },
  "styles": {
    "defaultTooltip": {
      "backgroundColor": "rgba(0, 0, 0, 0.8)",
      "color": "#ffffff",
      "padding": "10px",
      "borderRadius": "5px",
      "width": "200px"
    }
  },
  "regions": [
    {
      "id": "north-america",
      "shape": {
        "type": "rect",
        "coords": [50, 50, 200, 150]
      },
      "events": {
        "onHover": {
          "action": "showTooltip",
          "content": "<b>North America</b><br>Click to see trade data.",
          "styleId": "defaultTooltip"
        },
        "onClick": {
          "action": "showPanel",
          "panelTitle": "North America - Trade Data",
          "content": "<p>Detailed trade information for North America would be displayed here.</p>"
        }
      },
      "ariaLabel": "North America Region"
    },
    {
      "id": "south-america",
      "shape": {
        "type": "rect",
        "coords": [150, 220, 150, 120]
      },
      "events": {
        "onHover": {
          "action": "showTooltip",
          "content": "<b>South America</b>",
          "styleId": "defaultTooltip"
        },
        "onClick": {
          "action": "showPanel",
          "panelTitle": "South America - Trade Data",
          "content": "<p>Detailed trade information for South America would be displayed here.</p>"
        }
      },
      "ariaLabel": "South America Region"
    }
  ]
}
